<nav class="header">
    <div class="header_content">
        <div class="logo">
            <span>Facebook</span>
        </div>
        <form class="searchbar">
            <input type="text" placeholder="Search">
            <button type="submit" class="search_button"><i class="search_icon"></i></button>
        </form>
        <ul class="header_menu">
            <li class="menu_item">
                <img class="user-pic" src="img/dubovyk.jpg">
                <a href="#">{{u_name}}</a>
            </li>
            <li class="menu_item">
                <a href="#">Home</a>
            </li>
            <li class="menu_item">
                <a href="#">Friends</a>
            </li>
            <li class="menu_item">
                <div class="nav_icon icon_friends_requests"></div>
            </li>
            <li class="menu_item">
                <div class="nav_icon icon_messages"></div>
            </li>
            <li class="menu_item">
                <div class="nav_icon icon_notifications"></div>
            </li>
            <li class="menu_item">
                <div class="nav_icon icon_help"></div>
            </li>
            <li class="menu_item">
                <div class="nav_icon icon_arrow_down"></div>
            </li>
        </ul>

    </div>
</nav>
<aside>
    <ul class="left-sidebar">
        <li class="lsb-item"><a><img class="user-pic lsb-icon" src="img/dubovyk.jpg">Sergey Dubovyk</a>
        </li>
        <li class="lsb-item"><a><img class="user-pic lsb-icon" src="img/news.png">News feed</a>
        </li>
        <li class="lsb-item"><a><img class="user-pic lsb-icon" src="img/messenger.png">Messenger</a>
        </li>
        <li class="lsb-header">Shortcuts</li>
        {{#shortcuts}}
            <li class="lsb-item"><a href="{{target}}"><img class="user-pic lsb-icon" src="{{img_link}}">{{link_name}}</a>
            </li>
        {{/shortcuts}}
        <li class="lsb-header">Explore</li>
        {{#explore}}
            <li class="lsb-item"><img class="user-pic lsb-icon" src="{{img_link}}">{{link_name}}
            </li>
        {{/explore}}
        <li class="lsb-header">Create</li>
        <div>
            <a>Ad</a> · <a>Page</a> · <a>Group</a> · <a>Event</a>
        </div>
    </ul>

</aside>
<div class="content-main">
    <article class="post_new">
        <section class="new_post_header">
            <ul class="new_post_menu">
                <li><a>Make Post</a></li>
                <li><a>Photo/Video Album</a></li>
                <li><a>Live Video</a></li>
            </ul>
        </section>
        <section class="new_post_form">
            <div class="new_post_group">
                <img class="new_post_prof_pic" src="{{u_prof_pic}}"/>
                <form class="new_post">
                    <textarea class="new_post_body"></textarea>
                </form>
            </div>
            <footer class="reaction-ctrl">
                <div class="single-ctrl">
                    <a>Photo/Video</a>
                </div>
                <div class="single-ctrl">
                    <a>Feeling/Activity</a>
                </div>
                <div class="single-ctrl">
                    <a>...</a>
                </div>
            </footer>
        </section>
    </article>
    <section>
        {{#posts}}
        <article class="post block">
            <div class="block-body">
                <img class="author-userpic" src="{{author_userpic}}">
                <header class="post-header">
                        <a href="#"> <b>{{p_author}}</b></a>
                        {{p_action}} {{p_event}}.<br/>
                        <span class="post_header_date">{{p_date}}</span>
                </header>
                <article>
                        {{{p_content}}}
                    {{#if p_image}}
                        <img class="post-image" src="{{p_image}}">
                    {{/if}}
                </article>
            </div>
            <footer class="reaction-ctrl">
                <div class="single-ctrl">
                    <i class="icon-ctrl icon-like"></i>
                    <a>Like</a>
                </div>
                <div class="single-ctrl">
                    <i class="icon-ctrl icon-comment"></i>
                    <a>Comment</a>
                </div>
                <div class="single-ctrl">
                    <i class="icon-ctrl icon-share"></i>
                    <a>Share</a>
                </div>
            </footer>
        </article>
        {{/posts}}
    </section>
</div>
<aside class="right-sidebar">
    {{#if stories}}
    <section class="block">
        <span class="block-header">Stories</span>
    </section>
    {{/if}}
    {{#if event_counter}}
    <section class="block">
        <article class="block-entry">
            <a class="events_notification">{{event_counter}} event invites</a>
        </article>
        {{#birthdays}}
        <section class="block-entry">
            <a href="{{u_link}}" class="birthday_notification"><b>{{u_name}}</b><span>`s birthday is today</span></a>
        </section>
        {{/birthdays}}
    </section>
    {{/if}}
    {{#suggested_page}}
    <section class="block">
        <span class="block-header">Suggested page </span><a style="float: right">See all</a>
        <img class="post-image" src="{{img_src}}">
        <div class="suggested-inf">
            <span class="suggested-title"><a>{{page_name}}</a></span><br/>
            {{page_type}} · {{likes_num}} likes<br/>
            {{#friends_liked}}
            {{{friends_liked}}} liked this.
            {{/friends_liked}}
        </div>
    </section>
    {{/suggested_page}}
    <div class="block sys-info">
        <a>English (US)</a> · <a>Русский</a> · <a>Українська</a> · <a>Español</a> · <a href="#">Português
        (Brasil)</a>
    </div>
    <footer class="rsb-footer">
        <a>Privacy</a> · <a>Terms</a> · <a>Advertising</a> · <a>Ad Choices</a> · <a>Cookies</a> · <a>More</a><br/>
        Facebook © 2017
    </footer>

</aside>
<aside class="block-msg">
    <section class="active-users">
        <ul>
            {{#messages}}
            <li class="au-item">
                <img class="user-pic" src="{{u_profile}}"/>
                <span>{{u_name}}</span>
            </li>
            {{/messages}}
        </ul>
    </section>
    <div class="msg-search">
        <input type="text" placeholder="Search" class="msg_search_field">
    </div>
</aside>