<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="styles/index.css"/>
    <link rel="stylesheet" href="styles/common.css"/>
    <link rel="stylesheet" href="styles/header.css"/>
    <link rel="stylesheet" href="styles/tool_bar.css"/>
    <link rel="stylesheet" href="styles/user_post.css"/>
    <link rel="stylesheet" href="styles/stories.css"/>
    <link rel="stylesheet" href="styles/friend_suggestion.css"/>
    <link rel="stylesheet" href="styles/info_footer.css"/>
    <link rel="stylesheet" href="styles/friend_n_games.css"/>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons"/>
    <title>Facebook</title>
</head>
<body>
<header>
    <a href="index">
        <img id="logo" src="images/facebook-logo.jpg"/>
    </a>
    <form action="#">
        <input type="search" placeholder="Search"/>
    </form>
    <a href="#">
        <i class="fa fa-search" style="color: black;"></i>
    </a>
    <nav class="header-nav">
        <a class="header-nav user-profile" href="user_page" title="Profile">
            <img class="user-profile__user-pic"
                 src="images/user_avatar.jpeg"/>
            <span id="user-name" style="left: 680px;">Olya</span>
        </a>
        <a id="home" href="index" style="left: 740px;">Home</a>
        <a class="header-nav__h-icon" href="#" title="Friends Requests" style="left: 850px;">
            <i class="fa fa-user-o"></i>
        </a>
        <a class="header-nav__h-icon" href="#" title="Messages" style="left: 890px;">
            <i class="fa fa-envelope-o"></i>
        </a>
        <a class="header-nav__h-icon" href="#" title="Notifications" style="left: 930px;">
            <i class="fa fa-globe"></i>
        </a>
        <a class="header-nav__h-icon" href="#" title="Quick Help" style="left: 990px;">
            <i class="fa fa-question-circle-o"></i>
        </a>
        <a class="header-nav__h-icon" href="#" style="left: 1030px;">
            <i class="fa fa-caret-down"></i>
        </a>
    </nav>
</header>
<nav class="tool-bar">
    <section class="tool-bar__section">
        <h4 class="tool-bar__section-title">Account Settings</h4>
        <a class="tool-bar__section-item" href="user_page">
            <img class="user-profile__user-pic"
                 src="images/user_avatar.jpeg" style="width: 25px;"/>
            Olya Korabliova
        </a>
        <br>
        <a class="tool-bar__section-item active" href="#">
            <i class="fa fa-newspaper-o" style="color: #5D92FF;"></i>
            News Feed
        </a>
        <br>
        <a class="tool-bar__section-item" href="#">
            <i class="fa fa-envelope-o" style="color: #5D92FF;"></i>
            Messenger
        </a>
    </section>
    {{#tool-bar__main-page}}
        <section class="tool-bar__section">
            <h4 class="tool-bar__section-title {{status}}">{{title}}</h4>
            {{#items}}
                <a class="tool-bar__section-item" href="{{link}}">
                    <i class="{{icon-class}}" style="{{icon-style}}"></i>
                    {{name}}
                </a>
                <br>
            {{/items}}
            <a class="tool-bar__see-more" href="#">
                <i class="fa fa-caret-down"> See More...</i>
            </a>
        </section>
    {{/tool-bar__main-page}}
    <section class="tool-bar__section">
        <h4 class="tool-bar__section-title">Create</h4>
        <a class="tool-bar__see-more" href="#">Ad</a>
        <a class="tool-bar__see-more" href="#">Page</a>
        <a class="tool-bar__see-more" href="#">Group</a>
        <a class="tool-bar__see-more" href="#">Event</a>
    </section>
</nav>
<main>
    <section class="news-feed">
        <div class="news-feed__make-post">
            <a href="#" style="padding: 3px; color: #4B4F56;">
                <i class="fa fa-pencil-square-o"></i>
                Make Post
            </a>
            <a href="#" style="border-left: 2px solid #ced0d4; padding-left: 7px;">
                <i class="fa fa-file-photo-o" style="color: #4B4F56;"></i>
                Photo/Video Album
            </a>
            <a href="#" style="border-left: 2px solid #ced0d4; padding-left: 7px;">
                <i class="fa fa-video-camera" style="color: #4B4F56;"></i>
                Video
            </a>
        </div>
        <div class="news-feed__post-content">
            <form>
                <a class="user-profile" href="user_page" style="text-decoration: none">
                    <img class="user-profile__user-pic" height="45px"
                         src="images/user_avatar.jpeg"/>
                </a>
                <textarea placeholder="What's on your mind, Olya?"></textarea>
            </form>
            <div class="news-feed__add-content">
                <a href="#">
                    <i class="fa fa-photo" style="color: #8ABF4C;"></i>
                    Photo/Video
                </a>
                <a href="#">
                    <i class="fa fa-smile-o" style="color: #FFD62C;"></i>
                    Feeling/Activity
                </a>
                <a href="#">...</a>
            </div>
        </div>
        {{#main-page-posts}}
            <div class="news-feed__user-post">
                <a href="{{user-link}}">
                    <img class="user-profile__user-pic" src="{{img-src}}"/>
                </a>
                <div class="user-profile__info">
                    <a class="user-profile__name" href="{{user-link}}">{{name}}</a>
                    {{#add-info}}
                        <span>{{preposition}} <a href="#">{{info}}</a></span>
                    {{/add-info}}
                    <br>
                    <a href="#">
                        <time datetime="dd.mm.yyyy">{{post-time}}</time>
                    </a>
                </div>
                <p>{{description}}</p>
                <img class="news-feed__user-file" src="{{file}}"/>
                <br>
                <a class="user-post__like-comm-share" href="#">
                    <i class="fa fa-thumbs-o-up"> Like</i>
                </a>
                <a class="user-post__like-comm-share" href="#">
                    <i class="fa fa-comment-o"> Comment</i>
                </a>
                <a class="user-post__like-comm-share" href="#">
                    <i class="fa fa-send-o"> Share</i>
                </a>
            </div>
            <div class="who-likes-shared-commented">
                <div class="user-post__likes-shares">
                    <a class="who-liked" href="#">
                        <i class="fa fa-thumbs-up"> {{who-liked}}</i>
                    </a>
                    <a class="who-liked" href="#">
                        <i class="fa fa-send"> {{who-shared}}</i>
                    </a>
                </div>
                <div class="user-post__comments">
                    <form class="user-post__comments-form" action="#">
                        <a href="user_page">
                            <img class="user-profile__user-pic"
                                 src="images/user_avatar.jpeg"/>
                        </a>
                        <input type="text" placeholder="Write a comment..."/>
                    </form>
                </div>
            </div>
        {{/main-page-posts}}
    </section>
</main>
<section class="ad-feed">
    <div class="ad-feed__block">
        <h5 class="ad-feed__title">Stories
            <i class="fa fa-question-circle-o"
               title="Stories are photos and videos that only last temporarily. When a friend shares to their story, it'll appear here."
               style="float: right; font-size: 20px;"></i>
        </h5>
        <div class="ad-feed__block-story">
            <div class="ad-feed__block-story_active">
                <a href="#">
                    <img src="images/new_story.png"/>
                </a>
            </div>
            <div class="ad-feed__block-story_empty"></div>
            <div class="ad-feed__block-story_empty"></div>
            <div class="ad-feed__block-story_empty"></div>
        </div>
    </div>
    <div class="ad-feed__block">
        <h5 class="ad-feed__title">People You May Know <a href="#">See All</a></h5>
        {{#friends-suggestions}}
            <div class="ad-feed__block-friend">
                <a class="ad-feed__block-friend user-profile" href="{{user-link}}">
                    <img class="user-profile__user-pic"
                         src="{{user-picture}}"/>
                </a>
                <div class="ad-feed__block-friend-info">
                    <a class="ad-feed__block-friend-name" href="{{user-link}}">{{user-name}}</a><br>
                    <a class="ad-feed__block-mutual-frs" href="#">{{mutual-friends}}</a><br>
                    <form class="ad-feed__block-add-button" action="#">
                        <button type="button">
                            <i class="fa fa-user-plus"></i>
                            Add Friend
                        </button>
                    </form>
                </div>
            </div>
        {{/friends-suggestions}}
    </div>
    <div class="ad-feed__block">
        <div class="ad-feed__block-language">
            {{#languages}}
                <a class="ad-feed__block-language {{status}}" href="{{action}}">
                    {{language}}
                </a>
            {{/languages}}
        </div>
    </div>
    <footer>
        {{#info-footer}}
            <a class="ad-feed__footer-info" href="{{action}}">{{info}}</a>
        {{/info-footer}}
    </footer>
</section>
<aside class="aside-block">
    <section class="aside-block__games">
        <div id="your-games">
            <h6>YOUR GAMES
                <a href="#" class="aside-block__games see-more" style="font-size: 10px;">MORE</a>
            </h6>
            {{#user-games}}
                <a class="aside-block__games-link" href="{{game-link}}">
                    <img src="{{img-src}}"/>
                </a>
            {{/user-games}}
        </div>
        <div id="recommended-games">
            <h6>RECOMMENDED GAMES
                <a href="#" class="aside-block__games see-more" style="font-size: 10px;">MORE</a>
            </h6>
            <a href="#"><i class="material-icons" style="color: black">keyboard_arrow_left</i></a>
            {{#games-suggestions}}
                <a class="aside-block__games-link" href="{{game-link}}">
                    <img src="{{img-src}}"/>
                </a>
            {{/games-suggestions}}
            <a href="#"><i class="material-icons" style="color: black">keyboard_arrow_right</i></a>
        </div>
    </section>
    <section class="aside-block__friends online-friends">
        {{#online-friends}}
            <a class="aside-block__friends user-profile" href="{{user-link}}">
                <p>
                    <img class="user-profile__user-pic" src="{{user-pic}}"/>
                    {{user-name}}
                    <span class="{{status}}"></span>
                </p>
            </a>
        {{/online-friends}}
    </section>
    <section class="aside-block__friends more-contacts">
        <h5 style="color: black;">MORE CONTACTS</h5>
        {{#more-friends}}

            <a class="aside-block__friends user-profile" href="{{user-link}}">
                <p>
                    <img class="user-profile__user-pic" src="{{user-pic}}"/>
                    {{user-name}}
                    <span class="{{status}}"></span>
                </p>
            </a>
        {{/more-friends}}
    </section>
    <footer>
        <form action="#">
            <input type="search" placeholder="Search">
            <button>
                <i class="fa fa-search"></i>
            </button>
        </form>
    </footer>
</aside>
</body>
</html>